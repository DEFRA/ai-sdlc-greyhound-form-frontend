{% extends 'layouts/page.njk' %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  {{ govukPanel({
    titleText: "Application complete",
    html: "Your reference number<br><strong>" + referenceNumber + "</strong>"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h2 class="govuk-heading-m">What happens next</h2>
      
      <p class="govuk-body">
        We've sent your application to the licensing team.
      </p>
      
      <p class="govuk-body">
        They will contact you either to confirm your licence or to ask for more information.
      </p>

      <p class="govuk-body">
        You can view your submitted applications on your <a href="/dashboard" class="govuk-link">dashboard</a>.
      </p>

      <h2 class="govuk-heading-m">Give feedback on this service</h2>
      
      <p class="govuk-body">
        <a href="#" class="govuk-link">What did you think of this service?</a> (takes 30 seconds)
      </p>
    </div>
  </div>
{% endblock %} 